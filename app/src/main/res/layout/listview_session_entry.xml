<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_gravity="center_vertical|start"
    android:gravity="center_vertical|center_horizontal">

    <ImageButton    android:id="@+id/btEntryOpsMenu"
        android:contentDescription="@string/action_modify"
        android:layout_weight=".1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:backgroundTint="#00000000"
        android:layout_gravity="start|center_vertical"
        app:srcCompat="@drawable/btn_menu"
        app:tint="#ff707070" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_weight=".8">

        <TextView   android:id="@+id/lblData"
            app:fontFamily="monospace"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="" />

        <TextView   android:id="@+id/lblSpeed"
            app:fontFamily="monospace"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView      android:id="@+id/ivLogo"
        tools:ignore="ContentDescription"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_weight=".1"
        android:gravity="center_vertical|end"/>

</LinearLayout>
